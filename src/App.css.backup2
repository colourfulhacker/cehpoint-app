* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'SF Pro Display', sans-serif;
  background: #0B0615;
  color: #ffffff;
  overflow: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

#root {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.mobile-app {
  width: 100%;
  max-width: 480px;
  height: 100vh;
  margin: 0 auto;
  background: linear-gradient(180deg, #1a0f2e 0%, #0f0a1e 50%, #0a0514 100%);
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 0 100px rgba(138, 43, 226, 0.15);
}

.app-container {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding-bottom: 100px;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.app-container::-webkit-scrollbar {
  display: none;
}

.screen {
  min-height: calc(100vh - 100px);
  animation: screenFadeIn 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  padding: 20px;
}

@keyframes screenFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.royal-header {
  text-align: center;
  padding: 40px 20px 30px;
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.1) 0%, rgba(75, 0, 130, 0.05) 100%);
  border-radius: 30px;
  margin-bottom: 30px;
  position: relative;
  overflow: hidden;
}

.royal-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, #DAA520, transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 1; }
}

.crown-icon {
  font-size: 48px;
  margin-bottom: 15px;
  animation: float 3s ease-in-out infinite;
  filter: drop-shadow(0 4px 12px rgba(218, 165, 32, 0.5));
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.royal-title {
  font-size: 42px;
  font-weight: 700;
  background: linear-gradient(135deg, #DAA520 0%, #FFD700 50%, #DAA520 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10px;
  letter-spacing: 2px;
  text-shadow: 0 0 30px rgba(218, 165, 32, 0.3);
}

.royal-subtitle {

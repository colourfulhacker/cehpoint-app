  line-height: 1.6;
  position: relative;
  z-index: 1;
}

.investor-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.investor-stat {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  padding: 12px 8px;
  text-align: center;
}

.investor-stat .stat-label {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 5px;
  font-weight: 500;
}

.investor-stat .stat-value {
  font-size: 13px;
  color: #fff;
  font-weight: 700;
}

.investor-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 16px 24px;
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.4);
  color: #fff;
  border-radius: 16px;
  font-size: 15px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  position: relative;
  z-index: 1;
}

.investor-btn:active {
  transform: scale(0.97);
  background: rgba(255, 255, 255, 0.3);
}

.careers-intro {
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.15) 0%, rgba(75, 0, 130, 0.1) 100%);
  border-radius: 22px;
  padding: 28px 24px;
  margin-bottom: 30px;
  text-align: center;
  border: 1px solid rgba(138, 43, 226, 0.2);
}

.intro-icon {
  font-size: 44px;
  margin-bottom: 15px;
}

.careers-intro h3 {
  font-size: 22px;
  font-weight: 700;
  color: #fff;
  margin-bottom: 20px;
}

.perks-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.perk-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  background: rgba(138, 43, 226, 0.1);
  border-radius: 14px;
  padding: 16px 12px;
  border: 1px solid rgba(138, 43, 226, 0.15);
}

.perk-icon {
  font-size: 28px;
}

.perk-item span:last-child {
  font-size: 13px;
  color: #B8A9D9;
  font-weight: 600;
}

.careers-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 18px;
  margin-bottom: 20px;
}

.career-card {
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.15) 0%, rgba(75, 0, 130, 0.1) 100%);
  border-radius: 22px;
  padding: 24px 20px;
  border: 1px solid rgba(138, 43, 226, 0.2);
  box-shadow: 0 6px 24px rgba(138, 43, 226, 0.12);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.career-card:active {
  transform: translateY(-3px);
  box-shadow: 0 10px 32px rgba(138, 43, 226, 0.2);
}

.career-icon {
  font-size: 40px;
  margin-bottom: 15px;
}

.career-role {
  font-size: 20px;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12px;
}

.career-meta {
  display: flex;
  gap: 10px;
  margin-bottom: 12px;
}

.meta-tag {
  background: rgba(138, 43, 226, 0.2);
  color: #B8A9D9;
  padding: 6px 14px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 600;
}

.career-detail {
  font-size: 14px;
  color: #B8A9D9;
  margin-bottom: 15px;
}

.career-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 18px;
}

.skill-tag {
  background: linear-gradient(135deg, #8A2BE2, #4B0082);
  color: #fff;
  padding: 8px 14px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 600;
}

.career-apply-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 16px 24px;
  background: linear-gradient(135deg, #8A2BE2, #4B0082);
  color: #fff;
  border-radius: 14px;
  border: none;
  font-size: 15px;
  font-weight: 700;
  cursor: pointer;
  box-shadow: 0 6px 20px rgba(138, 43, 226, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.career-apply-btn:active {
  transform: scale(0.97);
  box-shadow: 0 3px 12px rgba(138, 43, 226, 0.2);
}

.contact-methods {
  display: grid;
  grid-template-columns: 1fr;
  gap: 18px;
  margin-bottom: 30px;
}

.contact-method-card {
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.15) 0%, rgba(75, 0, 130, 0.1) 100%);
  border-radius: 24px;
  padding: 32px 28px;
  text-align: center;
  border: 1px solid rgba(138, 43, 226, 0.2);
  box-shadow: 0 8px 28px rgba(138, 43, 226, 0.12);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.contact-method-card:active {
  transform: scale(0.98);
}

.contact-method-icon {
  font-size: 52px;
  margin-bottom: 18px;
}

.contact-method-card h3 {
  font-size: 24px;
  font-weight: 700;
  color: #fff;
  margin-bottom: 10px;
}

.contact-method-card p {
  font-size: 14px;
  color: #B8A9D9;
  margin-bottom: 15px;
}

.contact-detail {
  font-size: 16px;
  color: #DAA520;
  font-weight: 700;
  margin-bottom: 20px;
  letter-spacing: 0.5px;
}

.contact-btn {
  width: 100%;
  padding: 16px 28px;
  border-radius: 16px;
  font-size: 16px;
  font-weight: 700;
  border: none;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.whatsapp-btn {
  background: linear-gradient(135deg, #25D366, #128C7E);
  color: #fff;
  box-shadow: 0 6px 24px rgba(37, 211, 102, 0.3);
}

.whatsapp-btn:active {
  transform: scale(0.97);
  box-shadow: 0 3px 16px rgba(37, 211, 102, 0.2);
}

.email-btn {
  background: linear-gradient(135deg, #8A2BE2, #4B0082);
  color: #fff;
  box-shadow: 0 6px 24px rgba(138, 43, 226, 0.3);
}

.email-btn:active {
  transform: scale(0.97);
  box-shadow: 0 3px 16px rgba(138, 43, 226, 0.2);
}

.contact-info-section {
  background: linear-gradient(135deg, rgba(138, 43, 226, 0.1) 0%, rgba(75, 0, 130, 0.05) 100%);
  border-radius: 22px;
  padding: 25px 24px;
  margin-bottom: 20px;
  border: 1px solid rgba(138, 43, 226, 0.15);
}

.working-hours {
  margin-top: 18px;
}

.hours-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 0;
  border-bottom: 1px solid rgba(138, 43, 226, 0.1);
}

.hours-item:last-child {
  border-bottom: none;
}

.day {
  font-size: 14px;
  color: #B8A9D9;
  font-weight: 600;
}

.time {
  font-size: 14px;
  color: #fff;
  font-weight: 700;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  max-width: 480px;
  background: linear-gradient(180deg, rgba(26, 15, 46, 0.95) 0%, rgba(15, 10, 30, 0.98) 100%);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(138, 43, 226, 0.3);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 12px 10px 20px;
  box-shadow: 0 -8px 32px rgba(0, 0, 0, 0.4);
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  background: none;
  border: none;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 10px 8px;
  border-radius: 14px;
  position: relative;
  flex: 1;
  max-width: 80px;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #8A2BE2, #4B0082);
  border-radius: 0 0 10px 10px;
  opacity: 0;
  transform: scaleX(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item.active::before {
  opacity: 1;
  transform: scaleX(1);
}

.nav-item:active {
  transform: scale(0.9);
}

.nav-icon {
  font-size: 24px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: grayscale(0.5);
}

.nav-item.active .nav-icon {
  filter: grayscale(0);
  transform: scale(1.15);
}

.nav-label {
  font-size: 11px;
  color: #B8A9D9;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item.active .nav-label {
  color: #DAA520;
  font-weight: 700;
}

@media (min-width: 420px) {
  .categories-grid,
  .industries-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 360px) {
  .royal-title {
    font-size: 36px;
  }
  
  .page-title {
    font-size: 28px;
  }
  
  .tech-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'SF Pro Display', sans-serif;
  background: #0B0615;
  color: #ffffff;
  overflow: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

#root {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.mobile-app {
  width: 100%;
  max-width: 480px;
  height: 100vh;
  margin: 0 auto;
  background: linear-gradient(180deg, #1a0f2e 0%, #0f0a1e 50%, #0a0514 100%);
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 0 100px rgba(138, 43, 226, 0.15);
}

.app-container {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding-bottom: 100px;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.app-container::-webkit-scrollbar {
  display: none;
}

.screen {
  min-height: calc(100vh - 100px);
  animation: screenFadeIn 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  padding: 20px;
}

@keyframes screenFadeIn {
  from {
    opacity: 0;
    transform: translateY(12px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* HOME SCREEN - ROYAL WELCOME */
.screen-header {
  background: linear-gradient(165deg, #1e0f47 0%, #2d1554 40%, #1a0d3d 100%);
  padding: 70px 28px 50px;
  text-align: center;
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid rgba(218, 165, 32, 0.12);
}

.header-glow {
  position: absolute;
  top: -40%;
  left: 50%;
  transform: translateX(-50%);
  width: 180%;
  height: 180%;
  background: radial-gradient(ellipse at center, rgba(218, 165, 32, 0.18) 0%, rgba(255, 215, 0, 0.08) 30%, transparent 65%);
  animation: headerPulse 8s ease-in-out infinite;
  pointer-events: none;
  filter: blur(40px);
}

@keyframes headerPulse {
  0%, 100% { opacity: 0.5; transform: translateX(-50%) scale(1); }
  50% { opacity: 0.85; transform: translateX(-50%) scale(1.08); }
}

.app-title {
  font-size: 32px;
  font-weight: 700;
  background: linear-gradient(135deg, #C9941A 0%, #FFD966 35%, #E6B033 65%, #C9941A 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10px;
  position: relative;
  z-index: 1;
  letter-spacing: 0.3px;
  text-shadow: 0 4px 20px rgba(218, 165, 32, 0.25);
  line-height: 1.2;
}

.app-tagline {
  font-size: 17px;
  color: #E6B033;
  font-weight: 500;
  position: relative;
  z-index: 1;
  letter-spacing: 0.3px;
  opacity: 0.95;
}

.screen-header-simple {
  background: linear-gradient(180deg, rgba(30, 15, 71, 0.6) 0%, transparent);
  padding: 28px 24px 20px;
  border-bottom: 1px solid rgba(218, 165, 32, 0.08);
  backdrop-filter: blur(10px);
}

.screen-title {
  font-size: 30px;
  font-weight: 700;
  background: linear-gradient(135deg, #C9941A 0%, #FFD966 50%, #C9941A 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 6px;
  letter-spacing: 0.2px;
}

.screen-subtitle {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.55);
  font-weight: 400;
  letter-spacing: 0.2px;
}

.screen-content {
  padding: 24px 20px;
}

/* WELCOME CARD */
.welcome-card {
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.06) 0%, rgba(255, 215, 0, 0.03) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 20px;
  padding: 26px 24px;
  margin-bottom: 28px;
  backdrop-filter: blur(15px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25), inset 0 1px 1px rgba(255, 255, 255, 0.05);
}

.welcome-text {
  font-size: 16px;
  line-height: 1.65;
  color: rgba(255, 255, 255, 0.88);
  text-align: center;
  font-weight: 400;
  letter-spacing: 0.2px;
}

/* FEATURED SERVICES */
.featured-section {
  margin-bottom: 28px;
}

.section-heading {
  font-size: 22px;
  font-weight: 650;
  background: linear-gradient(135deg, #C9941A 0%, #FFD966 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 18px;
  letter-spacing: 0.2px;
}

.featured-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14px;
}

.feature-card {
  background: linear-gradient(145deg, rgba(40, 22, 75, 0.5) 0%, rgba(30, 18, 55, 0.5) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.2);
  border-radius: 18px;
  padding: 20px 14px 18px;
  text-align: center;
  cursor: pointer;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  -webkit-tap-highlight-color: transparent;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.03) 0%, transparent 60%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
}

.feature-card:active {
  transform: scale(0.96);
}

.feature-card:hover {
  border-color: rgba(218, 165, 32, 0.45);
  box-shadow: 0 12px 32px rgba(218, 165, 32, 0.15), 0 0 0 1px rgba(218, 165, 32, 0.1);
  transform: translateY(-3px);
}

.feature-card:hover::before {
  opacity: 1;
}

.feature-icon {
  font-size: 36px;
  margin-bottom: 10px;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.feature-card h3 {
  font-size: 13.5px;
  font-weight: 600;
  color: #FFD966;
  margin-bottom: 5px;
  line-height: 1.3;
  letter-spacing: 0.1px;
}

.feature-card p {
  font-size: 11.5px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8px;
  line-height: 1.4;
  font-weight: 400;
}

.feature-price {
  font-size: 12px;
  color: #E6B033;
  font-weight: 600;
  letter-spacing: 0.2px;
}

/* CTA BUTTONS */
.cta-section {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.cta-btn {
  width: 100%;
  padding: 18px 28px;
  font-size: 16.5px;
  font-weight: 650;
  border: none;
  border-radius: 14px;
  cursor: pointer;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-family: inherit;
  -webkit-tap-highlight-color: transparent;
  letter-spacing: 0.3px;
  position: relative;
  overflow: hidden;
}

.cta-btn:active {
  transform: scale(0.97);
}

.cta-btn.primary {
  background: linear-gradient(135deg, #C9941A 0%, #E6B033 50%, #D4A029 100%);
  color: #1a0d2e;
  box-shadow: 0 6px 24px rgba(218, 165, 32, 0.35), 0 2px 8px rgba(0, 0, 0, 0.2);
}

.cta-btn.primary:hover {
  box-shadow: 0 8px 32px rgba(218, 165, 32, 0.5), 0 4px 12px rgba(0, 0, 0, 0.25);
  transform: translateY(-2px);
}

.cta-btn.secondary {
  background: rgba(30, 18, 55, 0.4);
  color: #E6B033;
  border: 2px solid rgba(218, 165, 32, 0.35);
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.cta-btn.secondary:hover {
  background: rgba(218, 165, 32, 0.08);
  border-color: rgba(218, 165, 32, 0.5);
  box-shadow: 0 6px 24px rgba(218, 165, 32, 0.2);
}

/* CATEGORIES LIST */
.categories-list {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.category-item {
  background: linear-gradient(145deg, rgba(40, 22, 75, 0.45) 0%, rgba(30, 18, 55, 0.45) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 18px;
  padding: 20px 18px;
  display: flex;
  align-items: center;
  gap: 18px;
  cursor: pointer;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  -webkit-tap-highlight-color: transparent;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.04) 0%, transparent 60%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
}

.category-item:active {
  transform: scale(0.98);
}

.category-item:hover {
  border-color: rgba(218, 165, 32, 0.4);
  box-shadow: 0 8px 28px rgba(218, 165, 32, 0.12), 0 0 0 1px rgba(218, 165, 32, 0.08);
  transform: translateX(3px);
}

.category-item:hover::before {
  opacity: 1;
}

.category-icon-large {
  font-size: 42px;
  flex-shrink: 0;
  filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.25));
}

.category-info {
  flex: 1;
}

.category-name {
  font-size: 17px;
  font-weight: 600;
  color: #FFD966;
  margin-bottom: 5px;
  letter-spacing: 0.2px;
}

.category-count {
  font-size: 13.5px;
  color: rgba(255, 255, 255, 0.48);
  font-weight: 400;
}

.category-arrow {
  font-size: 22px;
  color: #E6B033;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.category-item:hover .category-arrow {
  opacity: 0.85;
  transform: translateX(3px);
}

/* CATEGORY DETAIL VIEW */
.category-detail {
  animation: detailSlideIn 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes detailSlideIn {
  from {
    opacity: 0;
    transform: translateX(-16px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.back-btn {
  background: rgba(218, 165, 32, 0.08);
  border: 1.5px solid rgba(218, 165, 32, 0.25);
  color: #E6B033;
  padding: 11px 22px;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  margin-bottom: 20px;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-family: inherit;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  letter-spacing: 0.2px;
}

.back-btn:hover {
  background: rgba(218, 165, 32, 0.15);
  border-color: rgba(218, 165, 32, 0.4);
  transform: translateX(-3px);
  box-shadow: 0 4px 16px rgba(218, 165, 32, 0.15);
}

.category-detail-title {
  font-size: 26px;
  font-weight: 700;
  background: linear-gradient(135deg, #C9941A 0%, #FFD966 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  gap: 14px;
  letter-spacing: 0.2px;
}

.category-detail-icon {
  font-size: 34px;
  filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.2));
}

/* SERVICE ITEMS */
.services-list {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.service-item {
  background: linear-gradient(145deg, rgba(40, 22, 75, 0.5) 0%, rgba(30, 18, 55, 0.5) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 20px;
  padding: 24px 22px;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.service-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.03) 0%, transparent 60%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
}

.service-item:hover {
  border-color: rgba(218, 165, 32, 0.35);
  box-shadow: 0 8px 28px rgba(218, 165, 32, 0.12), 0 0 0 1px rgba(218, 165, 32, 0.08);
}

.service-item:hover::before {
  opacity: 1;
}

.service-item-name {
  font-size: 19px;
  font-weight: 650;
  color: #FFD966;
  margin-bottom: 10px;
  letter-spacing: 0.2px;
  line-height: 1.3;
}

.service-item-summary {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.72);
  margin-bottom: 16px;
  line-height: 1.55;
  font-weight: 400;
  letter-spacing: 0.1px;
}

.service-benefits {
  margin-bottom: 18px;
}

.benefit {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.65);
  margin-bottom: 10px;
  display: flex;
  align-items: flex-start;
  gap: 10px;
  line-height: 1.5;
  font-weight: 400;
}

.check {
  color: #E6B033;
  font-weight: bold;
  flex-shrink: 0;
  font-size: 15px;
}

/* EXPANDED SERVICE DETAILS */
.service-expanded-details {
  margin-top: 18px;
  padding: 18px 20px;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.04) 0%, rgba(255, 215, 0, 0.02) 100%);
  border: 1px solid rgba(218, 165, 32, 0.15);
  border-radius: 14px;
  animation: expandIn 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

@keyframes expandIn {
  from {
    opacity: 0;
    max-height: 0;
    padding-top: 0;
    padding-bottom: 0;
  }
  to {
    opacity: 1;
    max-height: 300px;
    padding-top: 18px;
    padding-bottom: 18px;
  }
}

.expanded-text {
  font-size: 14.5px;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  margin-bottom: 16px;
  font-weight: 400;
}

.expanded-features {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.expanded-feature {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.68);
  padding: 10px 14px;
  background: rgba(218, 165, 32, 0.06);
  border: 1px solid rgba(218, 165, 32, 0.12);
  border-radius: 10px;
  display: flex;
  align-items: center;
  gap: 8px;
  line-height: 1.4;
  font-weight: 500;
}

.service-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
  padding-top: 18px;
  border-top: 1px solid rgba(218, 165, 32, 0.12);
  margin-bottom: 0;
}

/* QUICK CONTACT BAR */
.quick-contact-bar {
  display: flex;
  gap: 10px;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid rgba(218, 165, 32, 0.12);
}

.quick-contact-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 11px 16px;
  border-radius: 12px;
  font-size: 13.5px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-family: inherit;
  border: 1.5px solid;
  letter-spacing: 0.2px;
}

.quick-contact-item.whatsapp {
  background: linear-gradient(135deg, rgba(37, 211, 102, 0.08) 0%, rgba(29, 168, 81, 0.05) 100%);
  border-color: rgba(37, 211, 102, 0.25);
  color: #25D366;
}

.quick-contact-item.whatsapp:hover {
  background: linear-gradient(135deg, rgba(37, 211, 102, 0.15) 0%, rgba(29, 168, 81, 0.1) 100%);
  border-color: rgba(37, 211, 102, 0.4);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(37, 211, 102, 0.12);
}

.quick-contact-item.email {
  background: linear-gradient(135deg, rgba(218, 165, 32, 0.08) 0%, rgba(255, 215, 0, 0.05) 100%);
  border-color: rgba(218, 165, 32, 0.25);
  color: #FFD966;
}

.quick-contact-item.email:hover {
  background: linear-gradient(135deg, rgba(218, 165, 32, 0.15) 0%, rgba(255, 215, 0, 0.1) 100%);
  border-color: rgba(218, 165, 32, 0.4);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(218, 165, 32, 0.12);
}

.quick-contact-item:active {
  transform: scale(0.96);
}

.contact-icon {
  font-size: 16px;
}

.contact-text {
  font-size: 13.5px;
}

.service-price {
  font-size: 16px;
  font-weight: 700;
  color: #E6B033;
  letter-spacing: 0.2px;
}

.service-actions {
  display: flex;
  gap: 8px;
  align-items: center;
}

.view-more-btn {
  background: rgba(218, 165, 32, 0.08);
  border: 1.5px solid rgba(218, 165, 32, 0.25);
  color: #E6B033;
  padding: 10px 18px;
  border-radius: 10px;
  font-size: 13.5px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: inherit;
  white-space: nowrap;
}

.view-more-btn:active {
  transform: scale(0.95);
}

.view-more-btn:hover {
  background: rgba(218, 165, 32, 0.15);
  border-color: rgba(218, 165, 32, 0.4);
}

.view-more-btn.active {
  background: rgba(218, 165, 32, 0.12);
  border-color: rgba(218, 165, 32, 0.35);
  color: #FFD966;
}

.contact-link-btn {
  background: linear-gradient(135deg, rgba(218, 165, 32, 0.12) 0%, rgba(255, 215, 0, 0.08) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.3);
  color: #FFD966;
  padding: 10px 20px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-family: inherit;
  white-space: nowrap;
  letter-spacing: 0.2px;
}

.contact-link-btn:hover {
  background: linear-gradient(135deg, rgba(218, 165, 32, 0.18) 0%, rgba(255, 215, 0, 0.12) 100%);
  border-color: rgba(218, 165, 32, 0.45);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(218, 165, 32, 0.15);
}

.contact-link-btn:active {
  transform: scale(0.96);
}

.whatsapp-btn {
  background: linear-gradient(135deg, #25D366 0%, #1DA851 100%);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 7px;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 4px 16px rgba(37, 211, 102, 0.25);
  font-family: inherit;
  white-space: nowrap;
}

.whatsapp-btn:active {
  transform: scale(0.95);
}

.whatsapp-btn:hover {
  box-shadow: 0 6px 24px rgba(37, 211, 102, 0.4);
  transform: translateY(-2px);
}

/* IDEAS & PACKS */
.ideas-list,
.packs-section {
  margin-bottom: 28px;
}

.idea-item,
.pack-item {
  background: linear-gradient(145deg, rgba(40, 22, 75, 0.5) 0%, rgba(30, 18, 55, 0.5) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 20px;
  padding: 24px 22px;
  margin-bottom: 18px;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.idea-item::before,
.pack-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.03) 0%, transparent 60%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
}

.idea-item:hover,
.pack-item:hover {
  border-color: rgba(218, 165, 32, 0.35);
  box-shadow: 0 8px 28px rgba(218, 165, 32, 0.12), 0 0 0 1px rgba(218, 165, 32, 0.08);
}

.idea-item:hover::before,
.pack-item:hover::before {
  opacity: 1;
}

.idea-title,
.pack-name {
  font-size: 19px;
  font-weight: 650;
  color: #FFD966;
  margin-bottom: 14px;
  letter-spacing: 0.2px;
  line-height: 1.3;
}

.idea-detail {
  font-size: 14.5px;
  color: rgba(255, 255, 255, 0.72);
  margin-bottom: 12px;
  line-height: 1.55;
  font-weight: 400;
}

.idea-detail strong {
  color: #E6B033;
  display: block;
  margin-bottom: 5px;
  font-size: 12.5px;
  text-transform: uppercase;
  letter-spacing: 0.8px;
  font-weight: 650;
}

.pack-includes {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.72);
  margin-bottom: 10px;
  line-height: 1.5;
  font-weight: 400;
}

.pack-benefit {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.58);
  font-style: italic;
  margin-bottom: 18px;
  line-height: 1.5;
}

/* CONTACT SCREEN */
.contact-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 14px;
  margin-bottom: 28px;
}

.contact-card {
  background: linear-gradient(145deg, rgba(40, 22, 75, 0.5) 0%, rgba(30, 18, 55, 0.5) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 18px;
  padding: 28px 18px;
  text-align: center;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.contact-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.03) 0%, transparent 60%);
  opacity: 0;
  transition: opacity 0.35s ease;
  pointer-events: none;
}

.contact-card:hover {
  border-color: rgba(218, 165, 32, 0.35);
  box-shadow: 0 8px 28px rgba(218, 165, 32, 0.12);
}

.contact-card:hover::before {
  opacity: 1;
}

.contact-icon {
  font-size: 52px;
  margin-bottom: 14px;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
}

.contact-card h3 {
  font-size: 19px;
  font-weight: 650;
  color: #FFD966;
  margin-bottom: 7px;
  letter-spacing: 0.2px;
}

.contact-card p {
  font-size: 13.5px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 18px;
  line-height: 1.4;
}

.contact-action-btn {
  width: 100%;
  padding: 13px 22px;
  background: linear-gradient(135deg, #C9941A 0%, #E6B033 100%);
  color: #1a0d2e;
  border: none;
  border-radius: 11px;
  font-size: 15px;
  font-weight: 650;
  cursor: pointer;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  margin-bottom: 14px;
  font-family: inherit;
  box-shadow: 0 4px 16px rgba(218, 165, 32, 0.3);
  letter-spacing: 0.2px;
}

.contact-action-btn:active {
  transform: scale(0.95);
}

.contact-action-btn:hover {
  box-shadow: 0 6px 24px rgba(218, 165, 32, 0.45);
  transform: translateY(-2px);
}

.contact-info {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.45);
  display: block;
  font-weight: 400;
}

/* CAREERS CARD */
.careers-card {
  background: linear-gradient(145deg, rgba(218, 165, 32, 0.06) 0%, rgba(255, 215, 0, 0.03) 100%);
  border: 1.5px solid rgba(218, 165, 32, 0.18);
  border-radius: 20px;
  padding: 28px 24px;
  margin-bottom: 28px;
  text-align: center;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
}

.careers-heading {
  font-size: 24px;
  font-weight: 700;
  background: linear-gradient(135deg, #C9941A 0%, #FFD966 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 14px;
  letter-spacing: 0.2px;
}

.careers-text {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.72);
  line-height: 1.65;
  margin-bottom: 24px;
  font-weight: 400;
}

/* FOOTER INFO */
.footer-info {
  text-align: center;
  padding: 28px 0;
  border-top: 1px solid rgba(218, 165, 32, 0.08);
}

.footer-info p {
  font-size: 13.5px;
  color: rgba(255, 255, 255, 0.38);
  margin: 5px 0;
  font-weight: 400;
}

/* BOTTOM NAVIGATION */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  max-width: 480px;
  height: 76px;
  background: linear-gradient(180deg, rgba(30, 15, 71, 0.96) 0%, rgba(15, 8, 34, 0.98) 100%);
  backdrop-filter: blur(24px);
  border-top: 1.5px solid rgba(218, 165, 32, 0.15);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 10px 10px;
  z-index: 1000;
  box-shadow: 0 -6px 32px rgba(0, 0, 0, 0.35), 0 -1px 0 rgba(218, 165, 32, 0.08);
}

.nav-btn {
  flex: 1;
  background: transparent;
  border: none;
  padding: 10px;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border-radius: 14px;
  -webkit-tap-highlight-color: transparent;
  font-family: inherit;
}

.nav-btn:active {
  transform: scale(0.92);
}

.nav-icon {
  font-size: 26px;
  transition: transform 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.15));
}

.nav-label {
  font-size: 11.5px;
  font-weight: 550;
  color: rgba(255, 255, 255, 0.48);
  transition: all 0.35s ease;
  letter-spacing: 0.2px;
}

.nav-btn.active .nav-icon {
  transform: scale(1.12);
}

.nav-btn.active .nav-label {
  color: #E6B033;
  font-weight: 650;
}

.nav-btn.active {
  background: rgba(218, 165, 32, 0.08);
}

/* FLOATING ACTION BUTTON */
.floating-action-btn {
  position: fixed;
  bottom: 96px;
  right: max(calc((100vw - 480px) / 2 + 22px), 22px);
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #25D366 0%, #1DA851 100%);
  border: none;
  font-size: 26px;
  cursor: pointer;
  box-shadow: 0 8px 28px rgba(37, 211, 102, 0.45), 0 4px 12px rgba(0, 0, 0, 0.25);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-tap-highlight-color: transparent;
  animation: floatingPulse 3.5s ease-in-out infinite;
}

@keyframes floatingPulse {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-10px) scale(1.04); }
}

.floating-action-btn:active {
  transform: scale(0.9);
}

.floating-action-btn:hover {
  box-shadow: 0 12px 40px rgba(37, 211, 102, 0.6), 0 6px 16px rgba(0, 0, 0, 0.3);
  transform: scale(1.08);
}

/* RESPONSIVE */
@media (max-width: 480px) {
  .mobile-app {
    max-width: 100%;
  }
  
  .bottom-nav {
    max-width: 100%;
  }
  
  .floating-action-btn {
    right: 22px;
  }

  .service-item-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 14px;
  }

  .service-actions {
    width: 100%;
    justify-content: space-between;
  }

  .view-more-btn,
  .whatsapp-btn {
    flex: 1;
  }
}

@media (min-width: 481px) {
  .mobile-app {
    border-left: 1px solid rgba(218, 165, 32, 0.08);
    border-right: 1px solid rgba(218, 165, 32, 0.08);
  }
}
